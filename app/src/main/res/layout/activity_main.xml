<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etname"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <EditText
        android:id="@+id/etpass"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginBottom="344dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true" />

    <Button
        android:id="@+id/btlog"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="8dp"
        android:background="#D500796B"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpass"
        app:layout_constraintVertical_bias="0.248" />

    <TextView
        android:id="@+id/etl"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:fontFamily="cursive"
        android:text="Login"
        android:textColor="#00b8d4"
        android:textSize="46sp"
        app:layout_constraintBottom_toTopOf="@+id/etname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676" />

    <TextView
        android:id="@+id/etforpass"
        android:layout_width="166dp"
        android:layout_height="30dp"
        android:text="Forgot Password?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#D500796B"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpass"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/etsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member yet? SignUp here."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#D500796B"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btlog"
        app:layout_constraintVertical_bias="0.397" />

    <CheckBox
        android:id="@+id/etshowpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btlog"
        app:layout_constraintEnd_toStartOf="@+id/etforpass"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpass"
        app:layout_constraintVertical_bias="0.363" />

    <TextView
        android:id="@+id/etinfo"
        android:layout_width="242dp"
        android:layout_height="30dp"
        android:text="No. of attempts remaining: "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/etsignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btlog" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toTopOf="@+id/etpass"
        app:layout_constraintEnd_toStartOf="@+id/etname"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etl"
        app:layout_constraintVertical_bias="0.728"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toTopOf="@+id/etshowpass"
        app:layout_constraintEnd_toStartOf="@+id/etpass"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etname"
        app:layout_constraintVertical_bias="0.527"
        app:srcCompat="@drawable/password" />

</androidx.constraintlayout.widget.ConstraintLayout>