<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Edit Personal Information">

        <EditTextPreference
            android:defaultValue=" "
            android:key="full_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Your full name"
            android:dialogMessage="Enter full name"
            android:dialogTitle="Enter your full name"
            android:inputType="textCapWords"
            android:summary="enter your full name to be used in the application"/>
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="email_address"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Email Address"
            android:dialogMessage="Enter email address"
            android:dialogTitle="Enter your email address"
            android:inputType="textEmailAddress"
            android:summary="enter your email address"/>
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="phone_number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Phone Number"
            android:dialogMessage="Enter mobile number"
            android:dialogTitle="Enter your mobile number"
            android:inputType="textPhonetic"
            android:summary="enter your mobile number"/>

    </PreferenceCategory>

</PreferenceScreen>